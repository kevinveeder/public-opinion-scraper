# Example secrets file - copy to secrets.yaml and fill in your API keys

# Reddit API Credentials
reddit:
  client_id: "your_reddit_client_id"
  client_secret: "your_reddit_client_secret"
  user_agent: "SentimentMonitor/1.0 by Kevin Veeder"
  username: "your_reddit_username"  # Optional, for authenticated requests
  password: "your_reddit_password"  # Optional, for authenticated requests

# News API (if using newsapi.org)
newsapi:
  api_key: "your_newsapi_key"

# Hugging Face (for transformer models - optional if using public models)
huggingface:
  api_token: "your_huggingface_token"  # Optional

# Email notifications (optional)
email:
  smtp_server: "smtp.gmail.com"
  smtp_port: 587
  email: "your_email@gmail.com"
  password: "your_app_password"

# Slack notifications (optional)
slack:
  webhook_url: "your_slack_webhook_url"